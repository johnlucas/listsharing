<% if flash[:alert] %>
<div class="alert">
	<a class="close" data-dismiss="alert">×</a>
	<strong>Warning!</strong> <%= flash[:alert] %>
</div>
<% elsif flash[:notice] %>
<div class="alert alert-info">
	<a class="close" data-dismiss="alert">×</a>
	<%= flash[:notice] %>
</div>
<% end %>

