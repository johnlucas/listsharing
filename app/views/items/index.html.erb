<div class="page-header"><h1><%= @list.name %></h1></div>
	<% if flash[:alert] %>
	<div class="alert">
		<a class="close" data-dismiss="alert">×</a>
		<strong>Warning!</strong> <%= flash[:alert] %>
	</div>
	<% elsif flash[:notice] %>
	<div class="alert alert-info">
		<a class="close" data-dismiss="alert">×</a>
		<%= flash[:notice] %>
	</div>
	<% end %>
    <% @items.each do |item| %>
	<div class="row">
		<div class="span1" style="text-align:center">
			<%= link_to voteup_list_item_path(@list, item) do %>
				<i class="icon-chevron-up"></i>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="span1" style="text-align:center">
			<h3><%= item.votes %></h3>
		</div>
		<div class="span11">
			<h3><%= link_to item.name, list_item_path(@list, item) %></h3>
		</div>
      </tr>
	</div>
	<div class="row">
		<div class="span1" style="text-align:center">
			<%= link_to votedown_list_item_path(@list, item) do %>
				<i class="icon-chevron-down"></i>
			<% end %>
		</div>
	</div>
	<div id="disqus_thread"></div>
	<script type="text/javascript">
	    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
	    var disqus_shortname = 'listsharing'; // required: replace example with your forum shortname

	    /* * * DON'T EDIT BELOW THIS LINE * * */
	    (function() {
	        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
	        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
	        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
	    })();
	</script>
	<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	<a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
    <% end %>

